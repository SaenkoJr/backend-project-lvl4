extends ../layouts/application.pug

block header
  = t('views.statuses.new.title')

block content
  +formFor()(id='submitForm' action=route('statuses') method='post')
    +input(status, 'name', t('views.statuses.new.name'), errors)(type="text")
    +submit(status)(value=t('views.statuses.new.submit'))
