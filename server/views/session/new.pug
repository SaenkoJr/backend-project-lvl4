extends ../layouts/application.pug

block header
  = t('views.session.new.signIn')

block content
  +formFor()(id='submitForm' action=route('session') method='post')
    +input(signInForm, 'email', t('views.session.new.email'), errors)(type="text")
    +input(signInForm, 'password', t('views.session.new.password'), errors)(type="password")
    +submit(signInForm)(value=t('views.session.new.submit'))

